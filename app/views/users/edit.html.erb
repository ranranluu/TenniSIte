<h2>User Edit</h2>
<div class="container-fluid">
  <div class="row">
    <div class ="col-10 offset-1 text-left text-light">
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <%= f.label :Nickname %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :Image %>
          <%= f.attachment_field :profile_image, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :Introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :Playstyle %>
          <%= f.text_field :playstyle, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :Likeplayer %>
          <%= f.text_field :like_player, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :Likebrand %>
          <%= f.text_field :like_brand, class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Update User", class: "btn btn-success" %>
        </div>

      <% end %>
      <div class="text-center mb-3">
        <%= link_to "Unsubscribe", user_path(@user.id), method: :delete, data: {confirm: "Do you really want to unsubscribe?"}, class: "btn btn-danger" %>
      </div>
    </div>

  </div>
</div>