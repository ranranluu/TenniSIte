<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Follow Users</h2>
      <% if @users.exists? %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>nickname</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"50x50" %></td>
                <td><%= user.nickname %></td>
                <td>フォロー数: <%= user.followings.count %></td>
                <td>フォロワー数: <%= user.followers.count %></td>
                <td><%= link_to "Show", "/users/#{user.id}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>

    </div>
  </div>
</div>