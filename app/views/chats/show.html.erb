<h2 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>">Chat with <%= @user.nickname %></h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 mb-5 mx-xs-auto">
      <div class="message">
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <p style="text-align: right;">
              <%= chat.message %><br>
              <%= l chat.created_at %>
            </p>
          <% else %>
            <p style="text-align: left;">
              <%= chat.message %><br>
              <%= l chat.created_at %>
            </p>
          <% end %>
        <% end %>
      </div>
      <div class="text-right">
        <%= form_with model: @chat, data: {remote: true} do |f| %>
          <%= f.text_field :message %>
          <input type="submit" value="&#xf1d8;" class="fas btn btn-success">
          <%= f.hidden_field :room_id %>
        <% end %>
      </div>
    </div>
  </div>
</div>